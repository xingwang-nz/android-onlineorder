<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="Start Up" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="prefDisplaySplashScreen"
            android:title="Display Splash Screen" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Language" >
        <ListPreference
            android:entries="@array/listLanguage"
            android:entryValues="@array/listLanguageCode"
            android:key="prefLanguage"
            android:title="Select Language" 
            android:defaultValue="ENG"/>
    </PreferenceCategory>

</PreferenceScreen>